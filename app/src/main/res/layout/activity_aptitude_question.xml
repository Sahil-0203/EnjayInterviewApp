<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Home.AptitudeQuestion"
    android:background="@color/bg"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/aptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aptitude Question"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/Aptitudequestion"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/aptText"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Question"
            android:background="@drawable/questionbackground"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Aptitudequestion"
            android:id="@+id/tv_option1"
            android:text="option 1"
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:padding="17dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/questionbackground"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_option1"
            android:id="@+id/tv_option2"
            android:text="option 2"
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:padding="17dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:background="@drawable/questionbackground"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_option2"
            android:id="@+id/tv_option3"
            android:text="option 3"
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:padding="17dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:background="@drawable/questionbackground"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_option3"
            android:id="@+id/tv_option4"
            android:text="option 5"
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:padding="17dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:background="@drawable/questionbackground"
            />
        <Button
            android:id="@+id/btn_Aptitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go To Next Question"
            android:backgroundTint="@color/toolBarColor"
            android:layout_below="@+id/tv_option4"
            android:layout_marginHorizontal="20dp"
            android:padding="13dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</ScrollView>