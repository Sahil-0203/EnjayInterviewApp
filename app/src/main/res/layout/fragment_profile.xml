    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/namename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/profileimage"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/nameTextview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textview_design"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:padding="10dp"
            android:layout_below="@id/namename"
            />

        <TextView
            android:id="@+id/mobileno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number:"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/nameTextview"/>

        <TextView
            android:id="@+id/contactTextview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textview_design"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:padding="10dp"
            android:layout_below="@id/mobileno"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID:"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/contactTextview"/>
        <TextView
            android:id="@+id/emailTextview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textview_design"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:padding="10dp"
            android:layout_below="@id/email"
            />

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Date:"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/emailTextview"/>

        <TextView
            android:id="@+id/dobTextview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textview_design"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:padding="10dp"
            android:layout_below="@id/dob"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/dobTextview"
            >
            <Button

                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/toolBarColor"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DeActivateAccount"
                android:backgroundTint="#FF0000"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:text="De-Activate"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progressbar_bg" />

    </RelativeLayout>

</ScrollView>